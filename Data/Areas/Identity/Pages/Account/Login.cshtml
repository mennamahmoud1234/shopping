@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet">
    <style>



        body {
            background-image: url('https://images.ctfassets.net/l893v89mix1e/6DVTKMrYSczPwCMvfw1U3w/da931439ee4497b22a0d2fe92f50ee54/Shopping_in_the_metaverse_16x9_Homepage.jpg?w=2560&h=1440&fl=progressive&q=90&fm=jpg');
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
        }
    </style>
</head>
<body>







    <nav class="navbar navbar-expand-lg " style="background-color:black">
        <div class="container px-0">
            <a class="navbar-brand" href="#!" style="color:orange">Shopping</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#!" style="color:azure"> Home</a></li>

                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Identity/Account/Register" style="color:azure"> Register</a></li>







                    <li class="nav-item"><a class="nav-link" href="/home/feedback" style="color:azure">Feedback</a></li>


                </ul>
               


            </div>

        </div>
        <div>    <partial name="_LoginPartial" /></div>

    </nav>
    <div class="bg-img">
        <div class="col-md-4">
            <section>
                <div class="conyainer" style="display: table; text-align: center; margin-top: 100px; margin-left: 600px;width:300px;height:350px">
                    <form id="account" method="post" style="background-color:black">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <strong>  <label asp-for="Input.Email" style="font-size: xx-large; color:orange; margin-top: 30px"></label></strong>
                            <input asp-for="Input.Email" class="form-control" style="border-radius: 1rem; margin-top: 20px; width: 300px;height:40px" onfocus="this.value=''" value="Click here to clear" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <strong>  <label asp-for="Input.Password" style="font-size: xx-large; color: orange; margin-top: 30px "></label> </strong>
                            <input asp-for="Input.Password" class="form-control" style="margin-top: 20px; border-radius: 1rem; width: 300px; height: 40px " />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" style="margin-top: 30px; font-size: xx-large; color: black;background-color:orange;border-radius:1rem">Login</button>
                        </div>



                    </form>
                </div>
            </section>
        </div>

    </div>

</body>
</html>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
