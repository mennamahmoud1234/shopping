



@{

    Layout = null;
}

@model order


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
     
    <link href="~/css/styles.css" rel="stylesheet">
    <style>



        body {
            background-image: url('https://cms-assets.tutsplus.com/cdn-cgi/image/width=850/uploads/users/2659/posts/26768/image/eCommerce%20website%20templates%20image.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            height: 80vh;
          
        }
    </style>
</head>
<body>








    <div class="bg-img">
        <div class="col-md-4">
            <section>
                <div class="conyainer" style="display: table; text-align: center; margin-top: 100px; margin-left: 150px;width:300px;height:350px">
                    <form id="account" asp-action="addcartsave" style="background-color:black">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <strong>  <label asp-for="Product" style="font-size: xx-large; color:orange; margin-top: 30px"></label></strong>
                            <input asp-for="Product" class="form-control" style="border-radius: 1rem; margin-top: 20px; width: 300px;height:40px" onfocus="this.value=''" value="Click here to clear" />
                            <span asp-validation-for="Product" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <strong>  <label asp-for="Quantity" style="font-size: xx-large; color: orange; margin-top: 30px "></label> </strong>
                            <input asp-for="Quantity" class="form-control" style="margin-top: 20px; border-radius: 1rem; width: 300px; height: 40px " />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <strong>  <label asp-for="Price" style="font-size: xx-large; color: orange; margin-top: 30px "></label> </strong>
                            <input asp-for="Price" class="form-control" style="margin-top: 20px; border-radius: 1rem; width: 300px; height: 40px " />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" style="margin-top: 30px; font-size: xx-large; color: black;background-color:orange;border-radius:1rem">Add Order</button>
                        </div>



                    </form>
                </div>
            </section>
        </div>

    </div>



</body>
</html>