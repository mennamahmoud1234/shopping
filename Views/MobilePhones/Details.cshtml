@model shopping.Models.MobilePhone

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout2";
}

<h1 style="color:white;text-align:center">Details Of Product</h1>
<hr />
<div>


    <dl class="row" style="margin-left:350px">
        <dt class="col-sm-2" style="color: darkorange; font-size: x-large">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10" style="color: white; font-size: x-large ">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2" style="color: darkorange; font-size: x-large">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10" style="color: white; font-size: x-large">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2" style="color: darkorange; font-size: x-large">
            @Html.DisplayNameFor(model => model.Images)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Images != null)
            {
                <img class=" rounded-circle" src="data:image/*;base64,@(Convert.ToBase64String(Model.Images))" alt="..." width="60" height="60">

            }
        </dd>
    </dl>
</div>
<div style="margin-left: 350px">
    <a asp-action="Edit" asp-route-id="@Model.Id" style="color: white;  font-size: x-large">Edit</a> |
    <a asp-action="Index" style="color: white; font-size: x-large">Back to List</a>
</div>
